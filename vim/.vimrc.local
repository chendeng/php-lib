	noremap <D-2> 2gt
	noremap <D-3> 3gt
	noremap <D-4> 4gt
	noremap <D-5> 5gt
	noremap <D-6> 6gt
	noremap <D-7> 7gt
	noremap <D-8> 8gt
	noremap <D-9> 9gt
	noremap <D-0> :tablast<CR>
else
	" update & copy
	set <F13>=As
	inoremap <F13> <C-o>:up<CR>
	nnoremap <F13> :up<CR>
	nnoremap Aa ggVG
	vnoremap Ac "+y
endif

" select 
nnoremap <space> vas
