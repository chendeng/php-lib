if has("gui_running")

	"colorscheme darkblue
	"colorscheme wombat
	colorscheme torte
	"set background=dark
	"color solarized

	set go=aAce  " remove toolbar
	"set transparency=30
	"set guifont=*
	"set guifont=Menlo\ Bold:h13
	set guifont=Monaco:h13
	set showtabline=2
	set columns=200
	set lines=80
